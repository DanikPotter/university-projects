<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D54D8"
    android:orientation="vertical"
    tools:context="com.example.painter.MainActivity"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF" >

        <Button
            android:id="@+id/erasebutton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#009999"
            android:text="Erase" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="#000000"
        android:padding="5dp"
        android:layout_margin="5dp" >

        <com.example.painter.DrawingView
            android:id="@+id/drawing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#009999">
        </com.example.painter.DrawingView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:background="#000000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#A69D96"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/blackcolor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#000000"
                android:layout_gravity="center"  />

            <ImageView
                android:id="@+id/redcolor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#FD0006"
                android:layout_gravity="center"  />

            <ImageView
                android:id="@+id/yellowcolor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#FFFF00"
                android:layout_gravity="center"  />

            <ImageView
                android:id="@+id/bluecolor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#1B23BB"
                android:layout_gravity="center"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#A69D96"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/greencolor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#00F000"
                android:layout_gravity="center"  />

            <ImageView
                android:id="@+id/purplecolor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#DE00E6"
                android:layout_gravity="center"  />

            <ImageView
                android:id="@+id/whitecolor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#FFFFFF"
                android:layout_gravity="center"  />

            <ImageView
                android:id="@+id/orangecolor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#FF9A00"
                android:layout_gravity="center"  />

           
        </LinearLayout>
    </LinearLayout>

</LinearLayout>